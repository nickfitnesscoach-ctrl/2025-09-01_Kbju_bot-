# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Required for admin commands (e.g. /all_leads)
ADMIN_CHAT_ID=123456789

# Database URL (SQLite by default)
DB_URL=sqlite+aiosqlite:///data/db.sqlite3

# Optional integrations
N8N_WEBHOOK_URL=
N8N_WEBHOOK_SECRET=

# Проверка подписки на канал
ENABLE_SUBSCRIPTION_GATE=true
CHANNEL_URL=https://t.me/NickFitBlog
CHANNEL_ID_OR_USERNAME=@NickFitBlog
ALLOW_GATE_FALLBACK_PASS=false

# Runtime options
DEBUG=False
STALLED_REMINDER_DELAY_MIN=120
ENABLE_HOT_LEAD_ALERTS=true

# Admin panel
ADMIN_PASSWORD=your_secure_admin_password_here
SECRET_KEY=your_secret_key_for_flask_sessions_here
